<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_dsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ios_regular"
        android:padding="16sp"
        android:text="@string/make_default_dialer"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_click"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/tv_dsc"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_schedule_message"
        android:fontFamily="@font/ios_bold"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/make_default_dialer_btn"
        android:textAllCaps="true"
        android:textColor="@color/white"

        android:textSize="@dimen/sp_16" />
</RelativeLayout>