<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chathead"
        android:layout_marginLeft="@dimen/margin_icon_charhead"
        android:layout_marginRight="@dimen/margin_icon_charhead"
        android:layout_marginTop="@dimen/margin_icon_charhead"/>

    <TextView
        android:id="@+id/badge_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_badge_chathead"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="10"/>

    <TextView
        android:id="@+id/badge_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_badge_chathead"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="right"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="10"/>
</FrameLayout>