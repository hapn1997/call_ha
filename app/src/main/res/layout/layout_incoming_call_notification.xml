<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/textViewContactNameNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/imageViewDecline"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="vfrfrrfrfrfffrfrf"
        android:textColor="@color/selector_text_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewContactDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/imageViewDecline"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageViewDecline"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageViewAnswer"
        android:padding="5dp"
        android:clickable="true"
        android:src="@drawable/ic_cup_may" />

    <ImageView
        android:id="@+id/imageViewAnswer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:clickable="true"
        android:src="@drawable/ic_nghe_may" />
</RelativeLayout>
