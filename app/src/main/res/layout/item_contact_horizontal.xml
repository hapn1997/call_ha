<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/background_row"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">
<ImageView
    android:layout_marginLeft="@dimen/_10sdp"
    android:visibility="gone"
    android:src="@drawable/removeitem"
    android:id="@+id/imageremove"
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp"
    android:layout_marginTop="@dimen/text_size_sms_15"
    ></ImageView>
    <vn.com.call.widget.AvatarView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/imageremove"
        android:layout_marginTop="2.5dp"
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:id="@+id/fvfvfv"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="@dimen/sp_14"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/right"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginTop="7dp"
        android:orientation="vertical">

        <TextView
            android:textSize="16dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="Nguyen Son"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/type_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
             <ImageView
                 android:id="@+id/imagecallOrMess"
                 android:src="@drawable/iconfavcall1l"
                 android:layout_width="@dimen/text_size_sms_15"
                 android:layout_height="@dimen/text_size_sms_15"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Call"
                android:textColor="@color/snippet_text_color"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:scaleType="centerInside"
            android:id="@+id/info"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:src="@drawable/ic_info_outline_primary_color_24dp" />
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/_50sdp"
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/fvfvfv"
        android:layout_marginBottom="8dp"
        android:background="#33110808" />
</RelativeLayout>