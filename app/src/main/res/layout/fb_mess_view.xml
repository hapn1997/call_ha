<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/input_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="@string/search"
        android:imeOptions="flagNoExtractUi"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/gray_400"
        android:textSize="@dimen/text_size_normal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <vn.com.call.widget.FabBottomRecyclerView
            android:id="@+id/facebook_friend_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/facebook_friend_layout_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:textSize="@dimen/text_size_normal"
                    android:text="@string/chat_head_mess_fb_ads"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bg_login_fb">

                    <LinearLayout
                        android:id="@+id/facebook_friend_btn_login"
                        android:layout_width="230dp"
                        android:layout_height="42dp"
                        android:background="@drawable/background_row"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_fb_white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:gravity="center_vertical"
                            android:text="Login with Facebook"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_smallxx"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>