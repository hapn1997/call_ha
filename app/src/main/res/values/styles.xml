<resources>

    <style name="DetailContact"></style>

    <style name="DetailContact.Tools"></style>

    <style name="HeaderSideText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:fontFamily">@font/ios_regular</item>
    </style>
    <style name="SlideToActView.Example" parent="@style/SlideToActView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_500sdp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">6dp</item>
    </style>
    <style name="DetailContact.Tools.Item">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="RowSettingSms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black50</item>
    </style>
</resources>
